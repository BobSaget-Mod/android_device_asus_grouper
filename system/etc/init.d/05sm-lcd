# Scirpt by Paul Beeler (SparksCo)
# Check if this is a fresh ROM flash to run a one time check of LCD density
# export scirpts directory PATH
export PATH=$PATH:/system/scripts

if [ -e /system/etc/init.d/06tmp-lcd ];
then
    # Run the check of LCD density
    bash /system/etc/init.d/06tmp-lcd
    # Set system with read/write access
    bash /etc/mount-rw
    # Remove the script since we don't need to check anymore
    rm /system/etc/init.d/06tmp-lcd
    # Set system back to read only access
    bash /etc/mount-rw
fi;
